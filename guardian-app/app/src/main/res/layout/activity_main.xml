<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="269dp"
        android:layout_height="135dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="150dp"
        android:onClick="goToAddChild"
        android:text="Add a new Child to Monitor"
        app:layout_constraintBottom_toBottomOf="@+id/nestedScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="269dp"
        android:layout_height="135dp"
        android:onClick="goToCheckChildLocation"
        android:text="Check Child Location"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.582" />

    <Button
        android:id="@+id/button3"
        android:layout_width="269dp"
        android:layout_height="135dp"
        android:layout_marginBottom="80dp"
        android:onClick="goToCheckMonitoringChildren"
        android:text="Check Children Being Monitored"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>