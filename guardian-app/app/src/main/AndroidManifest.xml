<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guardian_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guardianapp"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.AddChildActivity" />
        <activity android:name=".Activities.GenerateQrCode" />
        <activity android:name=".Activities.ChildAdded"/>
        <activity android:name=".Activities.DefineSafeZone"/>
        <activity android:name=".Activities.SelectChildToLocate"/>
        <activity android:name=".Activities.SelectChildForSafeZone"></activity>
        <activity android:name=".Activities.CheckChildLocation" />
    </application>

</manifest>